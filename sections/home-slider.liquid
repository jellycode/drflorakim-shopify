<div class="home-slider-list">
{% for block in section.blocks %}
    <div class="banner-slide">
      
      {% if block.settings.show_banner_image %}
      	{% if block.settings.image != blank %}
      		<div class="banner-img"><img src="{{ block.settings.image | img_url: '1357x' }}" alt=""></div>
        {% endif %}
      {% endif %}
      
        {% if block.settings.show_youtube_video %}
          {% if block.settings.youtube_url != blank %}
            <div class="banner-video">
              <iframe src="{{ block.settings.youtube_url | escape }}?modestbranding=1&amp;autoplay=1&amp;controls=1&amp;fs=0&amp;loop=1&amp;rel=0&amp;showinfo=0&amp;disablekb=1&amp;playlist=VIDEO_ID" frameborder="0" width="100%" height="600" allowfullscreen="allowfullscreen"></iframe>
            </div>
          {% endif %}
        {% endif %}
      	{% if block.settings.show_vimeo_video %}
          {% if block.settings.vimeo_url != blank %}
            <div class="banner-video">
              <iframe src="{{ block.settings.vimeo_url }}?autoplay=1&loop=1&autopause=0" width="100%" height="600" frameborder="0" allow="fullscreen" allowfullscreen></iframe>
            </div>
          {% endif %}
        {% endif %}
      
      {% if block.settings.show_custom_video %}
      	{% if block.settings.mp4_url != blank %}
      		<div class="banner-video banner-video--item">
              <video playsinline width="100%" muted="">
                <source src="{{ block.settings.mp4_url | escape }}" type="video/mp4">
              </video>
            </div>
        {% endif %}
      {% endif %}
      
		<div class="banner_info">
        {% if block.settings.sub_label != blank %}
            <h4>{{ block.settings.sub_label | escape }}</h4>
        {% endif %}
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">
        {% endif %}
        {% if block.settings.main_label != blank %}
        	<h2>{{ block.settings.main_label | escape }}</h2>
        {% endif %}
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
        {% if block.settings.price_label != blank %}
            <div class="price_banner">{{ block.settings.price_label | escape }}</div>
        {% endif %}
		</div>
    </div>
  {% endfor %}
</div>

