<div class="image_with_text"  data-aos="fade-up">
  <div class="page-width">
    <div class="left_image">
      <img src="{{ section.settings.image | img_url: '700x700' }}" alt="{{ section.settings.title }}">
    </div>
    <div class="right_content">
      <h3>{{ section.settings.title }}</h3>
      <p style="{% if section.settings.button_text == "" %}margin-bottom: 0px; {% endif %}">{{ section.settings.summary }}</p>
      {% if section.settings.button_text != "" %}
      <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "June Image with text",
    "settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "Left Image"
		},
		{
          "type": "text",
          "id": "title",
          "label": "Section Title"
        },
		{
          "type": "html",
          "id": "summary",
          "label": "Summary"
        },
		{
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
		{
          "type": "text",
          "id": "button_url",
          "label": "Button Url"
        }
	],
	"presets": [
		{
			"name": "June Image with text"
		}
	]
  }
{% endschema %}

