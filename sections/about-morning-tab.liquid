{%- if section.settings.video_url != blank -%}
<div class="media-wrapper">
  <iframe src="{{ section.settings.video_url | escape }}?autoplay=0&controls=1&loop=1" frameborder="0" width="100%" height="510" allowfullscreen="allowfullscreen"></iframe>
</div>
{%- endif -%}

<div class="content-wrapper">
  {%- if section.settings.tab_title != blank -%}
  <h1>{{ section.settings.tab_title | escape }}</h1>
  {%- endif -%}


  {% for block in section.blocks %}
  <div class="content-item-wrapper">
    {% if block.settings.main_title != blank %}
    <h2 class="item-title"><span>{{ block.settings.main_title | escape }}</span></h2>
    {% endif %}
    {% if block.settings.sub_title != blank %}
    <div class="product-info">
      {% if block.settings.sub_title != blank %}
      <h3 class="product-title">{{ block.settings.sub_title | escape }}</h3>
      {% endif %}
      {% if block.settings.pro_main_dec != blank %}
      <p class="product-desc">{{ block.settings.pro_main_dec | escape }}</p>
      {% endif %}

      {% include 'pro-block-tab' %}
    </div>
    {% endif %}
  </div>
  {% endfor %}

</div>
